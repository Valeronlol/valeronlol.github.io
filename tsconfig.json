{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "paths": {
      "$/*": ["./src/*"],
      "$public/*": ["./public/*"],
      "$comp/*": ["./src/components/*"],
      "$store/*": ["./src/store/*"],
      "$i18n/*": ["./src/i18n/*"],
      "$const": ["./src/constants.js"],
      "$utils/*": ["./src/utils/*"]
    }
  }
}
