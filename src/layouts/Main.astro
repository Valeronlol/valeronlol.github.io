---
import '$/styles/global.css'
import Header from '$comp/Header/index.astro'
import Footer from '$comp/Footer/index.astro'
import { mainTitle } from '$const'
import ThemeProvider from '$comp/hoc/ThemeProvider.svelte'
import { mapLanguages } from '$i18n/languages.js'
---

<html lang={mapLanguages.en}>
  <head>
    <title>{mainTitle}</title>
    <meta charset="UTF-8" />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <link rel="apple-touch-icon" sizes="180x180" href="/fav/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/fav/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/fav/favicon-16x16.png">
    <link rel="manifest" href="/fav/site.webmanifest">
    <link rel="mask-icon" href="/fav/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">
  </head>
  <body>
    <div id='app'>
      <ThemeProvider client:load />
      <Header/>
      <main>
        <div class='wrapper'>
          <slot />
        </div>
      </main>
      <Footer/>
    </div>
  </body>
</html>

<style>
  #app, body {
    min-height: 100vh;
  }
  #app {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  #app.dark {
    color-scheme: dark;
  }
  main {
    display: flex;
    justify-content: center;
    flex-grow: 1;
  }
  .wrapper {
    display: flex;
    flex-direction: column;
    max-width: 1200px;
    padding: 70px 180px 50px;
    width: 100%;
    position: relative;
  }

  @media screen and (max-width: 1024px) {
   .wrapper {
      padding: 70px 90px 50px;
    }
  }

  @media screen and (max-width: 760px) {
   .wrapper {
      padding: 70px 30px 50px;
    }
  }

  @media screen and (max-width: 680px) {
   .wrapper {
      padding: 120px 30px 50px;
    }
  }

  @media screen and (max-width: 420px) {
   .wrapper {
      padding: 120px 10px 50px;
    }
  }
</style>
