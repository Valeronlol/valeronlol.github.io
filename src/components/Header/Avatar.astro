---
import AvatarSrc from '$public/assets/avatar.png'
---

<img
    src={AvatarSrc}
    alt="header-avatar"
    class="avatar"
>

<style>
    .header-avatar {
        width: 128px;
        height: 128px;
        border-radius: 50%;
        background-color: #fff;
        transition: background-color .25s ease;
    }
    :global(#app.dark .header-avatar) {
        background-color: #4F4F4F;
    }
</style>